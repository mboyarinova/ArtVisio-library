{% extends 'base.html.twig' %}

{% block title %}Библиотека АртВизио{% endblock %}

{% block body %}
  <h1>Список книг</h1>
  {% if books %}
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</id>
          <th>Название</th>
          <th>Автор</th>
          <th>Год</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for book in books %}
          <tr>
            <td>{{ book.id }}</td>
            <td>{{ book.title }}</td>
            <td>{{ book.author }}</td>
            <td>{{ book.year }}</td>
            <td>
              <a href="/book/{{ book.id }}"
                 class="btn btn-dark">Редактировать</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>В библиотеке нет книг.</p>
  {% endif %}
{% endblock %}
